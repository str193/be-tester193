import time
from selenium import webdriver # импортируем webdriver
from selenium.webdriver.support.select import Select
driver = webdriver.Chrome(executable_path='C:/chromedriver.exe')
driver.maximize_window()
driver.get("https://demo.us.espocrm.com/")
time.sleep(5)
sel1 = driver.find_element_by_css_selector("#field-language")
sel1.click()
lang = driver.find_element_by_css_selector("[value='en_GB']").click()
login = driver.find_element_by_css_selector("[type='submit']")
login.click()
time.sleep(3)
act = driver.find_element_by_css_selector("[title='Activities']")
act.click()
time.sleep(3)
task1 = driver.find_element_by_css_selector("[href='#Task']")
task1.click()
time.sleep(3)
sel2 = driver.find_element_by_class_name("input-group-btn.left-dropdown")
sel2.click()
time.sleep(3)
onl = driver.find_element_by_css_selector("li.checkbox:nth-child(11)")
onl.click()
time.sleep(3)
chek = driver.find_element_by_css_selector(".select-all.form-checkbox.form-checkbox-small")
chek.click()
time.sleep(3)
acti = driver.find_element_by_css_selector(".btn-group.actions")
acti.click()
mass =  driver.find_element_by_link_text('Mass Update')
mass.click()
time.sleep(3)
checkbox1 = driver.find_element_by_css_selector(".btn.btn-danger.btn-xs-wide.disabled.radius-left")
if checkbox1 is None:
    print("Атрибут есть")
else:
    print("Атрибутa нет")
time.sleep(3)
clo = driver.find_element_by_css_selector(".close")
clo.click()
creat = driver.find_element_by_css_selector(".btn.btn-default.btn-xs-wide.action.radius-left.radius-right")
creat.click()
time.sleep(3)
name1 = driver.find_element_by_css_selector("input[data-name='name']")
name1.send_keys("Test")
status = driver.find_element_by_css_selector(".col-sm-6:nth-child(1) select")
checkbox1_checked = status.get_attribute("value")
if checkbox1_checked == "Not Started":
    print("Not Started")
else:
    print("Have Started")
save = driver.find_element_by_css_selector(".btn-xs-wide:nth-child(1)")
save.click()
time.sleep(4)
task2 = driver.find_element_by_css_selector("[href='#Task'].action")
task2.click()
time.sleep(4)
click1 = driver.find_element_by_css_selector(".list-row:nth-child(1) .record-checkbox-container")
click1.click()
acti1 = driver.find_element_by_css_selector(".btn-group.actions")
acti1.click()
time.sleep(4)
rem =  driver.find_element_by_css_selector('.btn.btn-danger.btn-s-wide')
rem.click()
driver.quit()
